{
  "task": "search_jobs",
  "user_location": "India",
  "job_type": "remote",
  "global_eligibility": true,
  "priority_order": ["international", "india_mainstream"],
  "roles": [
    {
      "title": "Manual Tester",
      "keywords": ["\"manual testing\" AND remote", "\"test cases\" AND QA", "\"bug reports\" AND remote"]
    },
    {
      "title": "Test Engineer",
      "keywords": ["\"functional testing\" AND remote", "\"test plans\" AND QA", "\"automation testing\" AND WFH"]
    },
    {
      "title": "Quality Assurance",
      "keywords": ["\"quality assurance\" AND remote", "\"QA analyst\" AND remote", "\"defect tracking\" AND QA"]
    }
  ],
  "filters": {
    "remote_only": true,
    "exclude_closed": true,
    "exclude_duplicates": true,
    "min_posting_date": {
      "type": "relative",
      "days_ago": 10
    },
    "language_requirement": "English"
  },
  "sources": {
    "international_sources": [
      "site:lever.co",
      "site:boards.greenhouse.io",
      "Wellfound (filter last 7 days)",
      "YCombinator Jobs",
      "RemoteOK (fallback only)"
    ],
    "india_mainstream_sources": [
      "LinkedIn India (Remote)",
      "Indeed India (Remote)",
      "Naukri.com (Remote)",
      "Cutshort.io (Remote)",
      "Internshala (WFH)"
    ]
  },
  "results_per_run": 15,
  "runs_per_day": 7,
  "fallback_strategy": {
    "use_india_mainstream_if_international_under": 10,
    "expand_keywords_if_under": 5,
    "expanded_keywords": [
      "\"QA analyst\" AND remote",
      "\"software tester\" AND WFH",
      "\"manual QA\" AND \"work from home\"",
      "\"test specialist\" AND remote",
      "\"software quality\" AND remote"
    ]
  },
  "output": {
    "format": "markdown",
    "template": "### üåê Remote Testing/QA Jobs (Run {run_id} | {results_count} found on {date_generated})\n\n{listings}\n\nApply quickly. Prioritize top 3 matches based on salary and posting date.",
    "fields": [
      "job_title",
      "company_name",
      "location",
      "remote_status",
      "job_type",
      "salary_estimate",
      "posted_date",
      "apply_url",
      "source"
    ],
    "listing_format": "{job_title} {salary_estimate_tag}\n- Company: {company_name}\n- Location: {location}\n- Remote: {remote_status}\n- Type: {job_type}\n- Salary: {salary_estimate}\n- Posted: {posted_date}\n- Apply: {apply_url}\n- Source: {source}\n"
  },
  "meta": {
    "generate_summary": true,
    "track_sources": true,
    "auto_sort_results": true,
    "deduplicate_across_sources": true,
    "date_generated": "{{today}}",
    "track_job_status": {
      "enabled": true,
      "statuses": ["saved", "applied", "skipped"]
    },
    "tag_logic": {
      "salary_estimate_tag": {
        "if_above": "‚Çπ600000/year or $7500/year",
        "then_tag": "üí∞ High Paying",
        "else": ""
      }
    },
    "error_handling": {
      "retry_attempts": 3,
      "retry_delay_seconds": 60,
      "log_errors": true
    }
  }
}
